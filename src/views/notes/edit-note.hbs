<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
            <div class="card-body">
                <form action="/notes/edit/{{notes._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Title" value="{{notes.title}}" autofocus />
                    </div>
                    <div class="form-group">
                        <textarea name="description" id="" placeholder="Description" class="form-control">{{notes.description}}</textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-block" type="submit">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>